#!/usr/bin/make -f

export QT_SELECT=qt5

VERSION ?= $(shell dpkg-parsechangelog -ldebian/changelog -SVersion | awk -F'-' '{print $$1}')


%:
	dh $@ --parallel

override_dh_auto_configure:
	dh_auto_configure -- -DVERSION=$(VERSION)

ifeq ($(DEB_BUILD_ARCH), mips64el)
override_dh_auto_configure:
	dh_auto_configure -- -DVERSION=$(VERSION) -DNO_GRUB_REPAIR_PLUGIN=1
endif

ifeq ($(DEB_BUILD_ARCH), sw_64)
override_dh_auto_configure:
	dh_auto_configure -- -DVERSION=$(VERSION) -DNO_GRUB_REPAIR_PLUGIN=1
endif
